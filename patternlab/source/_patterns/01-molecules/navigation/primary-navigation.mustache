{{# primary_nav }}
<nav class="primary-nav toggled-element" id="primary-nav" role="navigation" data-active-target="primary-nav">
  <ul class="primary-nav__list">
    {{# items }}
      <li class="primary-nav__list-item {{# has_subnav }} primary-nav--with-subnav js-hover {{/ has_subnav }}">
        <a class="primary-nav__link theme--primary-text-color {{# is_active }} theme--secondary-text-color active {{/ is_active }}" href="{{ url }}">{{{ text }}}</a>
        {{# has_subnav }}
          <ul class="primary-nav__subnav">
            {{# sub_items }}
              <li class="primary-nav__subnav__list-item"><a class="primary-nav__subnav__link theme--primary-text-color" href="{{ url }}">{{{ text }}}</a></li>
            {{/ sub_items }}
          </ul> <!-- /.primary-nav__subnav -->
        {{/ has_subnav }}
      </li>
    {{/ items }}
  </ul> <!-- /.primary-nav__list -->
</nav> <!-- /.primary-nav -->
{{/ primary_nav }}
