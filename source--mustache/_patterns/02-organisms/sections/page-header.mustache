{{# page_header }}
{{# has_image }}
  <style type="text/css">
    .header-swath--with-image {
      background-image: url({{{ img_url_s }}});
    }
    @media (min-width: 900px) {
      .header-swath--with-image {
        background-image: url({{{ img_url_m }}});
      }
    }
    @media (min-width: 1100px) {
      .header-swath--with-image {
        background-image: url({{{ img_url_l }}});
      }
    }
  </style>
{{/ has_image }}
<header class="header__swath theme--primary-background-color {{ page_header_class }}">
  <div class="layout-container cf">
    {{# header_text }}
      <div class="header__text">
        <div class="unify show-at--small">
          <h2 class="font--secondary--l upper white">{{ heading }}</h2>
          <h3 class="font--secondary--m white--trans">{{ subhead }}</h3>
        </div>
        <div class="header__logo">{{> atoms-image }}</div>
      </div> <!-- /.header__text -->
    {{/ header_text }}
    <div class="flex-container cf">
      <div class="shift-left--fluid">
        {{# kicker }}<span class="kicker white">{{{ kicker }}}</span>{{/ kicker }}
        <h1 class="font--tertiary--xl white"><a class="link--white link-hover--white" href="">{{ heading }}</a></h1>
      </div>
      <div class="shift-right--fluid"></div> <!-- /.shift-right--fluid -->
    </div>
  </div>
</header> <!-- /.header__swath -->
{{/ page_header }}
