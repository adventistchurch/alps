{{# page_header_longform }}
<header class="longform__header {{# picture }} longform__header--with-hero {{/ picture }}">
  <div class="layout-container cf spacing">
    <div class="longform__header__text spacing--half">
      <h1 class="longform__heading font--tertiary--xl">{{ heading }}</h1>
      {{# dek }}
        <p class="font--primary--m">{{{ dek }}}</p>
      {{/ dek }}
    </div>
    {{# picture }}
      <div class="longform__hero">
        {{> atoms-picture }}
      </div>
    {{/ picture }}
  </div>
</header> <!-- /.longform__header -->
{{/ page_header_longform }}
