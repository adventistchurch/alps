{{# media_block_default }}
<div class="media-block block spacing--quarter {{ block_class }}">

  {{# block_heading }}
    <h2 class="font--tertiary--m theme--primary-text-color pad--btm">{{# heading_icon }}<div class="icon icon--s">{{{ heading_icon }}}</div> {{/ heading_icon }} {{{ block_heading }}}</h2>
  {{/ block_heading }}

  {{# kicker }}
    <span class="kicker font--secondary--m upper theme--secondary-text-color db">{{ kicker }}</span>
  {{/ kicker }}

  <div class="media-block__inner spacing--quarter {{ block_inner_class }}">
    {{# img }}
      <a class="media-block__image-wrap block__image-wrap db" href="{{ url }}">
        <div class="{{ block_img_class }} dib"><img class="media-block__image block__image" src="{{ img.src }}" alt="{{ img.alt }}" /></div>
      </a> <!-- /.media-block__image-wrap -->
    {{/ img }}

    {{# video }}
      <div class="fitvid media-block__video">{{> atoms-video }}</div>
    {{/ video }}

    <div class="media-block__content block__content {{ block_content_class }}">

      {{# title }}
        <h3 class="media-block__title block__title {{ block_title_class }}"><a href="{{ url }}" class="block__title-link theme--primary-text-color">{{{ title }}}</a></h3>
      {{/ title }}

      {{# date }}
        <time class="block__date font--secondary--xs brown space-half--btm" datetime="{{ datetime }}">{{{ date }}}</time>
      {{/ date }}

      <div class="spacing--half">
        {{# description }}
          <div class="text text--s pad-half--btm"><p class="media-block__description block__description"><span class="font--primary--xs">{{ description }}</span></p></div>
        {{/ description }}

        {{# cta }}
          <p><a class="media-block__cta block__cta btn theme--secondary-background-color" href="{{ url }}">{{ cta }}</a></p>
        {{/ cta }}
      </div> <!-- /.spacing -->

    </div> <!-- media-block__content -->
  </div> <!-- /.media-block__inner -->

</div> <!-- /.media-block -->
{{/ media_block_default }}
