<div class="u-spacing--triple">
  <div class="text u-spacing">
    <h2 class="u-font--secondary--l u-theme--color--darker">{{ text.heading|raw}}</h2>
    <p class="o-intro">{{ text.intro|raw }}</p>
    {% include '@molecules/media/video-figure-with-caption.twig' with {'figure_class': 'size--large'} %}
  </div>

  {% include '@organisms/sections/block-feed-posts.twig' %}

  <section class="c-section c-section__blocks u-spacing--double">
    {% for block in content_blocks %}
      {% include '@molecules/blocks/content-block.twig' with block %}
    {% endfor %}
  </section>

  <section class="c-section c-section__blocks u-spacing--double">
    {% for block in page_content_blocks %}
      {% include '@molecules/blocks/content-block.twig' with block %}
    {% endfor %}
  </section>

  {% include '@organisms/sections/block-feed-pages.twig' %}

  <section class="c-section c-section__blocks">
    {% include '@molecules/blocks/content-block.twig' %}
  </section>
</div>