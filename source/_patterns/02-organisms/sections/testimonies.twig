{% if testimonies %}
  <section class="c-testimonies u-spacing u-position--relative">
    <div class="c-block__heading u-theme--border-color--darker u-space--double--bottom">
      <h3 class="c-block__heading-title u-theme--color--darker">Testimonies</h3>
      <a href="" class="c-block__heading-link u-theme--color--base u-theme--link-hover--dark">See All</a>
    </div>
    <div class="l-grid l-grid-wrap l-grid-wrap--6-of-7 js-carousel__multi-item">
      {% for block in testimonies %}
        <div class="l-grid-item--6-col l-grid-item--m--3-col l-grid-item--l--2-col l-grid-item--xl--1-col u-space--bottom u-padding--zero--sides">
          {% include '@molecules/blocks/content-block.twig' with block %}
        </div>
      {% endfor %}
    </div>
    <a href="{{ url }}" class="o-button  u-space--left">Share your testimony!</a>
  </section>
  <!-- /.testimonies -->
{% endif %}
