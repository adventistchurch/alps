{% if content_filter %}
<div class="filter spacing">
  <div class="filter-search">
    <h3 class="font--secondary--m upper theme--primary-text-color space-half--btm"><strong>Search</strong></h3>
    <form action="" role="search" method="get" class="filter-search">
      <fieldset>
        <div class="field-container spacing--half">
          <input type="search" name="s" class="search__results__input font--secondary--s" value="" />
          <button class="search__submit font--secondary--s upper theme--secondary-background-color">Search</button> <!-- /.search-form__submit -->
        </div> <!-- /.field-container -->
      </fieldset>
    </form> <!-- /.search-form -->
  </div>
  <form class="content-filter-form filter-form spacing--double">
    <div class="filter-items filter-items__checkbox spacing--quarter">
      <h3 class="font--secondary--m upper theme--primary-text-color space-half--btm"><strong>Filter</strong></h3>
      {% if content_filter.checkbox %}
        {% for item in content_filter.checkbox %}
          <div class="filter-item__checkbox form-group">
            <input id="checkbox-{{ item.id }}}" type="checkbox" name="checkbox" value="{{ item.label }}" />
            <label for="checkbox-{{ item.id }}}" class="theme--primary-text-color">{{ item.label }}</label>
          </div>
        {% endfor %}
      {% endif %}
    </div>
    <div class="filter-items filter-items__radio spacing--quarter">
      <h3 class="font--secondary--m upper theme--primary-text-color space-half--btm"><strong>Sort By</strong></h3>
      {% if content_filter.radio %}
        {% for item in content_filter.radio %}
          <div class="filter-item__radio form-group">
            <input id="radio-{{ item.id }}" type="radio" name="radio" value="{{ item.label }}" />
            <label for="radio-{{ item.id }}" class="theme--primary-text-color">{{ item.label }}</label>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </form>
</div>
{% endif %}
