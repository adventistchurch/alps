{% if content_carousel %}
<div class="carousel content-carousel ovh">
  <div class="carousel__inner content-carousel__slides {{ content_carousel.content_carousel_class }}">
    {% for content_carousel_slides in content_carousel %}
      <div class="content-carousel__item spacing--half pad">
        <h3 class="content-carousel__heading font--secondary--m theme--primary-text-color">{{ content_carousel_slides.heading }}</h3>
        <div class="content-carousel__description">
          <p>{{ content_carousel_slides.description }}</p>
        </div>
      </div> <!-- /.content-carousel__item -->
    {% endfor %}
  </div> <!-- /.content-carousel__slides -->

  {% if not no_arrows %}
  <div class="carousel__controls carousel__controls--outside">
    <span class="arrow__prev"><span class="carousel__arrow carousel__arrow--s carousel__arrow--prev icon round">{% include atoms-icon-arrow-left with {'fill_class': 'theme--secondary-fill-color'} %}</span></span>
    <span class="arrow__next"><span class="carousel__arrow carousel__arrow--s carousel__arrow--next icon round">{% include atoms-icon-arrow-right with {'fill_class': 'theme--secondary-fill-color'} %}</span></span>
  </div> <!-- /.carousel__controls -->
  {% endif %}

</div> <!-- /.content-carousel -->
{% endif %}
